/* pages/commentlist/commentlist.wxss */
.comment-page{
  display: flex;
  flex-direction: column;
  align-content: left;
  background-color: rgba(161, 154, 154, 0.123);
}

.comment-list{
  display: flex;
  flex-direction: column;
  margin: auto;
  width: 70%;
  background-color: rgb(236, 231, 231);
  border: 12rpx solid rgb(218, 209, 209);
  border-radius: 30rpx;
}

.comment-title{
  height: 100rpx;
  display: flex;
  align-items: left;
  flex-direction: row;
}

.comment-icon{
  height: 100rpx;
  width: 100rpx;
  border-radius: 50rpx;
}

.comment-addition{
  align-self: left;
  margin-left: 20rpx;
}

.comment-content{
  font-size: 32rpx;
  min-height: 80rpx;
  max-height: 810rpx;
  margin-top: 20rpx;
  text-overflow: ellipsis;
  overflow: hidden;
}

.picture-group{
  display: flex;
  flex-direction: row;
  width: 100%;
}

.picture{
  width: 200rpx;
  height: 200rpx; 
  margin: 10rpx; 
}

.comment-username{
  font-size: 32rpx;
  text-align: left;
  margin-left: 30rpx;
  width: 300rpx;
  overflow: hidden;         /* 超出一行自动隐藏*/
  text-overflow: ellipsis;  /* 文字隐藏后面加省略号*/
  white-space: nowrap;      /* 强制不换行*/
  color: red;
}
